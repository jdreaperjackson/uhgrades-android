<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_marginVertical="@dimen/_2sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/_4sdp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/guideHorizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Id" />

        <TextView
            android:id="@+id/tvTerm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideHorizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Term" />

        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/guideHorizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Subject" />

        <TextView
            android:id="@+id/tvCatNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideHorizontal"
            app:layout_constraintTop_toBottomOf="@id/tvTerm"
            tools:text="Catalog No" />

        <TextView
            android:id="@+id/tvCourceDes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/guideHorizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSubject"
            tools:text="Course Description" />

        <TextView
            android:id="@+id/tvInstructorFirst"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideHorizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvCourceDes"
            tools:text="Instructor First" />

        <TextView
            android:id="@+id/tvInstructorLast"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideHorizontal"
            app:layout_constraintStart_toStartOf="@+id/guideHorizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvCourceDes"
            tools:text="Instructor Last" />

        <TextView
            android:id="@+id/tvACount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideHorizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvInstructorLast"
            tools:text="A Count" />

        <TextView
            android:id="@+id/tvBCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginTop="43dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/guideHorizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInstructorLast"
            tools:text="B Count" />

        <TextView
            android:id="@+id/tvCCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideHorizontal"
            app:layout_constraintTop_toBottomOf="@id/tvBCount"
            tools:text="C Count" />

        <TextView
            android:id="@+id/tvDCount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/guideHorizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBCount"
            tools:text="D Count" />

        <TextView
            android:id="@+id/tvFCount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"

            tools:text="F Count" />

        <TextView
            android:id="@+id/tvSatisfactory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvDropCount"
            app:layout_constraintTop_toBottomOf="@id/tvFCount"
            tools:text="Satisfactory" />

        <TextView
            android:id="@+id/tvDropCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvSubject"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFCount"
            tools:text="Drop Count" />

        <TextView
            android:id="@+id/tvPercentA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_size"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/tvDropCount"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFCount"
            tools:text="Percent Count" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>